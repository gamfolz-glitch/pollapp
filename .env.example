# Copy this file to .env and adjust values.
# IMPORTANT: Do not commit your real .env.

# 1 = debug/dev mode, 0 = production mode
DJANGO_DEBUG=1

# In production you MUST set a strong secret key
# Example (PowerShell):
#   [guid]::NewGuid().ToString('N')
DJANGO_SECRET_KEY=dev-insecure-secret-key

# Comma-separated
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated, must include scheme (http:// or https://)
# Set this in production to your real domain, e.g.:
# DJANGO_CSRF_TRUSTED_ORIGINS=https://your-app.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000

# Optional: use Postgres/MySQL/etc
# DATABASE_URL=postgres://user:pass@host:5432/dbname
# DATABASE_URL=

# Optional DB tuning (when DATABASE_URL is set)
DJANGO_DB_CONN_MAX_AGE=60
DJANGO_DB_SSL_REQUIRE=0

# Production HTTPS / cookie security (recommended when DJANGO_DEBUG=0)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1

# HSTS is optional and can be dangerous if misconfigured; default is 0
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0

# Gunicorn / container
PORT=8000
WEB_CONCURRENCY=2
